# Flask Configuration
FLASK_APP=app.py
FLASK_ENV=production
FLASK_DEBUG=False
PORT=5000

# Download Configuration
DOWNLOADS_DIR=downloads
TEMP_DIR=temp
MAX_CONCURRENT_DOWNLOADS=3
CLEANUP_INTERVAL_HOURS=24

# Security (generate your own secret key)
SECRET_KEY=your-secret-key-here

# Optional: Database Configuration (if using PostgreSQL)
# DATABASE_URL=postgresql://downloader:password@localhost:5432/video_downloader

# Optional: Redis Configuration (if using Redis)
# REDIS_URL=redis://localhost:6379/0

# Optional: API Rate Limiting
# RATELIMIT_STORAGE_URL=redis://localhost:6379/1

# Logging
LOG_LEVEL=INFO